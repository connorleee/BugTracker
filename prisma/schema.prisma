model Projects {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  Tickets     Tickets[]
  Users       Users?    @relation(fields: [users_id], references: [id])
  users_id    String?

  @@map("projects")
}

enum TicketStatus {
  UNASSIGNED
  ASSIGNED
}

enum TicketType {
  BUG
  STORY
  STORY_POINT
  SUPPORT
}

enum Priorities {
  LOW
  MEDIUM
  HIGH
}
