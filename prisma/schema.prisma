generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO Add Models ticket_history and devAssginments

model Users {
  id               String     @id @default(uuid())
  email            String
  phone            String
  password_hash    String     @map("passwordHash")
  last_name        String     @map("lastName") @db.VarChar(32)
  first_name       String     @map("firstName") @db.VarChar(32)
  other_name       String?    @map("otherName") @db.VarChar(32)
  created_at       DateTime   @default(now()) @map("createdAt") @db.Timestamptz()
  updated_at       DateTime   @updatedAt @map("updatedAt")
  comments         Comments[]
  projects         Projects[]
  Tickets          Tickets[]
  assigned_tickets Tickets[]  @relation("ticket_assigned", map: "assignedTicket")

  @@unique([email, phone])
  @@map(name: "users")
}

model Tickets {
  id            Int          @id @default(autoincrement())
  title         String
  project_id    Int?         @map("projectId")
  description   String?      @default("No description")
  priority      Priorities   @default(LOW)
  type          TicketType   @default(SUPPORT)
  status        TicketStatus @default(UNASSIGNED)
  time_estimate DateTime?    @map("timeEstimate")
  project       Projects?    @relation(fields: [project_id], references: [id])
  Comments      Comments[]
  Users         Users?       @relation(fields: [users_id], references: [id])
  users_id      String?      @map("userId")
  assginee      Users?       @relation("ticket_assigned", fields: [assigned_to], references: [id])
  assigned_to   String?      @map("assignedTo")

  @@map(name: "tickets")
}

model Comments {
  id           Int      @id @default(autoincrement())
  descriptions String
  author_id    String   @map("authorId")
  ticket_id    Int      @map("ticketId")
  created_at   DateTime @default(now()) @map("createdAt") @db.Timestamptz()
  updated_at   DateTime @updatedAt @map("updatedAt")
  user         Users    @relation(fields: [author_id], references: [id])
  ticket       Tickets  @relation(fields: [ticket_id], references: [id])

  @@map(name: "comments")
}

